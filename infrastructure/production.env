# Production Environment Configuration for Harvest Hope
# This file contains environment-specific settings for production deployment

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
STACK_NAME=HarvestHopeStack

# Application Configuration
APP_NAME=harvest-hope
ENVIRONMENT=production
VERSION=1.0.0

# DynamoDB Configuration
GAME_STATES_TABLE=harvest-hope-game-states
NPC_TEMPLATES_TABLE=harvest-hope-npc-templates
MARKET_DATA_TABLE=harvest-hope-market-data
PLAYER_STATS_TABLE=harvest-hope-player-stats
LOANS_TABLE=harvest-hope-loans
GOVERNMENT_SCHEMES_TABLE=harvest-hope-government-schemes
TRANSACTIONS_TABLE=harvest-hope-transactions

# S3 Configuration
ASSETS_BUCKET=harvest-hope-assets
DATA_BUCKET=harvest-hope-data
CONFIGS_BUCKET=harvest-hope-configs

# Lambda Configuration
LAMBDA_MEMORY_SIZE_SMALL=512
LAMBDA_MEMORY_SIZE_LARGE=1024
LAMBDA_TIMEOUT_SHORT=30
LAMBDA_TIMEOUT_LONG=60
LAMBDA_RESERVED_CONCURRENCY_LOW=5
LAMBDA_RESERVED_CONCURRENCY_MEDIUM=10
LAMBDA_RESERVED_CONCURRENCY_HIGH=20

# API Gateway Configuration
API_THROTTLE_RATE_LIMIT=1000
API_THROTTLE_BURST_LIMIT=2000
API_CACHE_TTL_MINUTES=5
API_CACHE_CLUSTER_SIZE=0.5

# CloudWatch Configuration
LOG_RETENTION_DAYS=30
ALARM_EVALUATION_PERIODS=2
ALARM_THRESHOLD_LAMBDA_ERRORS=5
ALARM_THRESHOLD_API_LATENCY=5000
ALARM_THRESHOLD_API_4XX_ERRORS=50
ALARM_THRESHOLD_API_5XX_ERRORS=10
ALARM_THRESHOLD_DYNAMODB_THROTTLE=5

# Bedrock Configuration
BEDROCK_MODEL_CLAUDE_SONNET=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MODEL_CLAUDE_HAIKU=anthropic.claude-3-haiku-20240307-v1:0

# Frontend Configuration
FRONTEND_DOMAIN=harvest-hope.com
FRONTEND_SUBDOMAIN=app
AMPLIFY_APP_NAME=harvest-hope-frontend
AMPLIFY_BRANCH=main

# Security Configuration
ENABLE_XRAY_TRACING=true
ENABLE_LAMBDA_INSIGHTS=true
ENABLE_POINT_IN_TIME_RECOVERY=true
ENABLE_ENCRYPTION_AT_REST=true

# Performance Configuration
ENABLE_CLOUDFRONT_COMPRESSION=true
ENABLE_S3_TRANSFER_ACCELERATION=true
CLOUDFRONT_PRICE_CLASS=PriceClass_100
ENABLE_API_CACHING=true

# Monitoring Configuration
ENABLE_DETAILED_MONITORING=true
ENABLE_PERFORMANCE_DASHBOARD=true
ENABLE_ERROR_ALARMS=true
ENABLE_LATENCY_ALARMS=true

# Cost Optimization
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST
S3_STORAGE_CLASS=STANDARD
LAMBDA_ARCHITECTURE=x86_64

# Backup and Recovery
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=7
ENABLE_CROSS_REGION_BACKUP=false

# Compliance and Governance
ENABLE_CLOUDTRAIL=true
ENABLE_CONFIG_RULES=true
ENABLE_GUARDDUTY=false
ENABLE_SECURITY_HUB=false

# Development vs Production Differences
REMOVAL_POLICY=DESTROY  # Change to RETAIN for production
ENABLE_TERMINATION_PROTECTION=false  # Change to true for production